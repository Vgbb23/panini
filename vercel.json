{
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "memory": 256,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/bolt/transactions", "destination": "/api/bolt/transactions" },
    { "source": "/api/fruitfy/(.*)", "destination": "/api/fruitfy/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
